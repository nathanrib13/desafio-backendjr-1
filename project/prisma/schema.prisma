// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Clients {
  id                Int         @id  @default(autoincrement())  
  nome              String
  idade             Int
  cpf               String   @unique 
  rg                String    
  data_nasc         String
  mae               String
  pai               String
  senha             String
  sexo              String
  address           Address?
  contact           Contact?
  characteristics   Characteristics?

}

model Address{
   id                Int         @id  @default(autoincrement()) 
  cep               String
  endereco          String
  numero            String
  bairro            String
  cidade            String
  estado            String

  clientId            Int    @unique 
  client            Clients   @relation(fields: [clientId], references:[id])
}

model Contact{
   id                Int         @id  @default(autoincrement()) 
  telefone_fixo     String   @unique 
  celular           String   @unique 
  email             String   @unique 

  clientId            Int    @unique 
  client            Clients   @relation(fields: [clientId], references:[id])
}

model Characteristics {
   id                Int         @id  @default(autoincrement())  
  altura            Float
  peso              Int
  tipo_sanguineo    String
  cor               String
  signo             String

  clientId            Int    @unique 
  client            Clients   @relation(fields: [clientId], references:[id])
}
